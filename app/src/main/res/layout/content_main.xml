<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kirillantonov.calculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#05fbfb"
    android:padding="0dp">


    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button3"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button8"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textColor="#fa0206"
        android:background = "#05fbfb"
        android:onClick="onSimpleClick" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button6"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:onClick="onSimpleClick" />

    <Button
        android:text="."
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:id="@+id/button10"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onSimpleClick" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button4"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button11"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onSimpleClick"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button12"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onClickEqual"
        android:layout_toLeftOf="@+id/button16"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:layout_below="@+id/button8" />

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:id="@+id/button15"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onOperationClick"
        android:layout_height="70dp"
        android:layout_below="@+id/button14"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:id="@+id/button14"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:onClick="onOperationClick"
        android:layout_height="70dp"
        android:layout_below="@+id/button13"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:id="@+id/button13"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onOperationClick"
        android:layout_height="70dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:id="@+id/button16"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onOperationClick"
        android:layout_height="70dp"
        android:layout_below="@+id/button15"
        android:layout_alignLeft="@+id/button15"
        android:layout_alignStart="@+id/button15" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button9"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fa0206"
        android:background="#05fbfb"
        android:onClick="onSimpleClick"
        android:layout_alignBottom="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button8" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:id="@+id/button17"
        android:background="#05fbfb"
        android:textSize="35sp"
        android:textColor="#fa0206"
        android:onClick="onClickC"
        android:layout_below="@+id/button16"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12"
        android:layout_height="80dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="207dp"
        android:id="@+id/textView"
        android:background="#c2feee"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
