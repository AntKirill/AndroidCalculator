<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#05fbfb">

    <TextView
        android:layout_width="230dp"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#c2feee" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/button"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/button2"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/button3"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/button4"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/button5"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/button6"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/button7"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/button8"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/button9"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="00"
        android:id="@+id/button10"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/button11"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickNumber"
        android:layout_below="@+id/button10"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/button12"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onCLickEqual"
        android:layout_below="@+id/button11"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="C"
        android:id="@+id/button13"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onClickC"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/button14"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onCLickBinaryOperation"
        android:layout_alignTop="@+id/button13"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/button15"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onCLickBinaryOperation"
        android:layout_alignTop="@+id/button14"
        android:layout_toRightOf="@+id/button14"
        android:layout_toEndOf="@+id/button14" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="x"
        android:id="@+id/button16"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onCLickBinaryOperation"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button15"
        android:layout_toEndOf="@+id/button15" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/button17"
        android:background="#05fbfb"
        android:textSize="35dp"
        android:textColor="#fa0206"
        android:onClick="onCLickBinaryOperation"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button16"
        android:layout_toEndOf="@+id/button16" />

</RelativeLayout>